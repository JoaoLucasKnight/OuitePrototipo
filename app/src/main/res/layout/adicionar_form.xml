<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Adicionar"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:layout_constraintStart_toStartOf="@+id/radio_cont"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radio_cont"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/space_radio_btt"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:checkedButton="@id/space_radio_btt"
                app:layout_constraintStart_toStartOf="parent"
                android:text="Lugar"

                />
            <RadioButton
                android:id="@+id/box_radio_btt"
                android:layout_width="80dp"
                android:layout_height="match_parent"

                app:layout_constraintStart_toEndOf="@+id/space_radio_btt"
                app:layout_constraintEnd_toStartOf="@+id/artifact_radio_btt"
                android:text="Caixa"
                />
            <RadioButton
                android:id="@+id/artifact_radio_btt"
                android:layout_width="80dp"
                android:layout_height="match_parent"

                app:layout_constraintEnd_toEndOf="parent"
                android:text="Objeto"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </RadioGroup>

    <TextView
        android:id="@+id/textViewdsaf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Lugar ou caixa, que ele estÃ¡"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:layout_constraintStart_toStartOf="@+id/radio_cont"
        app:layout_constraintTop_toBottomOf="@+id/radio_cont" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cadastroIntputEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/radio_cont"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/radio_cont"
        app:layout_constraintTop_toBottomOf="@+id/textViewdsaf">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Nome"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:layout_constraintStart_toStartOf="@+id/radio_cont"
        app:layout_constraintTop_toBottomOf="@+id/cadastroIntputEmail" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cadastroIntputEmail2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/radio_cont"
        app:layout_constraintStart_toStartOf="@+id/radio_cont"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Notas ou foto"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        app:layout_constraintStart_toStartOf="@+id/radio_cont"
        app:layout_constraintTop_toBottomOf="@+id/cadastroIntputEmail2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cadastroIntputEmail4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/radio_cont"
        app:layout_constraintStart_toStartOf="@+id/radio_cont"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salvar"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cadastroIntputEmail4" />


</androidx.constraintlayout.widget.ConstraintLayout>